{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>タイトル</th>
                <th>作成日</th>
                <th>更新日</th>
                <th>状態</th>
                <th colspan="3">操作</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.status == 1 ? '公開' : '非公開' }}</td>
                <td>
                <a href="{{ path('post_show', {'id': post.id}) }}"><button type="button" class="btn btn-secondary">詳細</button></a>
                <a href="{{ path('post_edit', {'id': post.id}) }}"><button type="button" class="btn btn-info">編集</button></a>
{#                    <a href="{{ path('post_delete', {'id': post.id}) }}"><button type="button" class="btn btn-danger">削除</button></a>#}
                    {{ include('post/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('post_new') }}">Create new</a>
{% endblock %}
