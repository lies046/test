{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% for sub in subs %}
            <div>
                {{ sub.title }}
            </div>
        {% endfor %}
    </div>
            {% if previous >= 0 %}
                {# offsetクエリ #}
                <a href="{{ path('index', { offset: previous }) }}">前へ</a>
            {% endif %}
            {% if next < subs|length %}
                <a href="{{ path('index', { offset: next }) }}">次へ</a>
            {% endif %}
{% endblock %}
